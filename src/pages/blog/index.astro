---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import dayjs from "dayjs";

const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.dateCreated.valueOf() - a.data.dateCreated.valueOf()
);
---

<Layout>
    <h1>Blogs</h1>
    This list shows all blog posts I have published, sorted descendingly by date.
    <br />
    Every blog post I publish has three tags to categorize them, which you can browse
    <a href="/tags">here</a>.

    <ul class="mt-8">
        {
            posts.map((post) => (
                <li>
                    <a href={`/blog/${post.id}/`}>
                        <h4 class="title">{post.data.title}</h4>
                    </a>
                    <span class="text-xs">
                        published{" "}
                        {dayjs(post.data.dateCreated).format("MMMM D, YYYY")}
                    </span>
                    <p class="indent-0">{post.data.description}</p>
                </li>
            ))
        }
    </ul>
</Layout>
