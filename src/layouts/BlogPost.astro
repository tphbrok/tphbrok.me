---
import type { CollectionEntry } from "astro:content";
import Layout from "./Layout.astro";
import dayjs from "dayjs";

type Props = CollectionEntry<"blog">["data"] & { id: string };

const { title, dateCreated, tags, description, id } = Astro.props;

console.log(id);
---

<Layout
    title={title}
    seo={{
        description,
        ogTitle: description,
        ogType: "article",
        title: title,
    }}
>
    <article class="flex flex-col gap-y-2">
        <h1>{title}</h1>
        <span class="text-sm"
            >published {dayjs(dateCreated).format("MMMM D, YYYY")}</span
        >
        <ul class="flex gap-x-2">
            {
                tags.map((tag) => (
                    <a
                        href={`/tags/${tag}`}
                        class=" bg-cyan-100  dark:bg-cyan-950 px-2 h-6 rounded-lg leading-[22px]"
                    >
                        {tag}
                    </a>
                ))
            }
        </ul>

        <div class="pt-8 flex flex-col gap-y-4 leading-[28px]">
            {
                new RegExp(/-\d+$/).test(id) && (
                    <i>
                        This blog post is part of a blog series. You can find
                        all posts in this series{" "}
                        <a href={`/blog/${id.replace(/-\d+$/, "-series")}`}>
                            here
                        </a>
                        .
                    </i>
                )
            }

            <slot />
        </div>
    </article>
</Layout>
